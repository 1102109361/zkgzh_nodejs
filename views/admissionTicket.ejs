<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>准考证</title>
        <style>
            body{
                margin: 0;
                padding: 0;
            }

            .page-bg{
                display: flex;
                flex-direction: column;
                background:#F7F8FA;
                min-height: 100vh;
            }

            .user-card-bg{
                padding: 10px 16px;
            }

            .user-card{
                display: flex;
                padding: 23px 14px;
                border-radius: 4px;
                background-image: url('../../ticket-bg.png');
                background-size: 100% 100%;
            }

            .user-head{
                flex-shrink: 0;
                width: 96px;
                height: 133px;
                background: #fff;

            }

            .img{
                width: 100%;
                height: 100%;
                object-fit: contain;
            }

            .user-info{
                padding: 0 12px;
            }

            .user-name{
                color: #fff;
                font-size: 16px;
                font-weight: 500;
                margin-top: 13px;
            }

            .user-info-item{
                word-break: break-all;
                color: #fff;
                font-size: 12px;
                margin-top: 6px;
            }

            .info{
                padding: 0 16px;
                background: #fff;
            }

            .info-item{
                display: flex;
                justify-content: space-between;
                align-items: center;
                min-height: 44px;
                padding: 13px 0;
                border-bottom: 1px solid rgba(235, 237, 240, 0.39);
            }

            .item-title{
                flex-shrink: 0;
                width: 120px;
                color: #323233;
                font-size: 14px;
            }

            .item-content{
                color: #7D7E80;
                font-size: 14px;
                text-align: right;
            }

            .info-item2 {
                display: flex;
                flex-direction: column;
                min-height: 44px;
                padding: 13px 0;
                border-bottom: 1px solid rgba(235, 237, 240, 0.39);
            }
        </style>
    </head>
    <body>
    <div class="page-bg">
        <div class="user-card-bg">
            <div class="user-card">
                <div class="user-head">
                    <img src="<%= userImg %>" class="img" alt="准考证照片">
                </div>
                <div class="user-info">
                    <div class="user-name"><%= name %></div>
                    <div class="user-info-item">身份证号：<%= idCardHidden %></div>
                    <% if(examNum){ %>
                        <div class="user-info-item">准考证号：<%= examNum %></div>
                    <% } %>
                    <% if(classroom){ %>
                        <div class="user-info-item">考场名称：<%= classroom %></div>
                    <% } %>
                    <% if(seatNo){ %>
                        <div class="user-info-item">座位号：<%= seatNo %></div>
                    <% } %>
                </div>
            </div>
        </div>
        <div class="info">
            <% if(examStartTime){ %>
                <div class="info-item">
                    <div class="item-title">考试时间</div>
                    <div class="item-content"><%= examStartTime %> 至 <%= examEndTime %></div>
                </div>
            <% } %>
            <% if(interviewTime){ %>
                <div class="info-item">
                    <div class="item-title">面试时间</div>
                    <div class="item-content"><%= interviewTime %></div>
                </div>
            <% } %>
            <% if(interviewAddress){ %>
                <div class="info-item">
                    <div class="item-title">面试地点</div>
                    <div class="item-content"><%= interviewAddress %></div>
                </div>
            <% } %>
            <% if(examAddress){ %>
                <div class="info-item">
                    <div class="item-title">考试地点</div>
                    <div class="item-content"><%= examAddress %></div>
                </div>
            <% } %>
            <% if(examination){ %>
                <div class="info-item">
                    <div class="item-title">考试内容</div>
                    <div class="item-content"><%= examination %></div>
                </div>
            <% } %>
        </div>
        <div class="info" style="margin-top: 10px;">
            <% if(prjName){ %>
                <div class="info-item">
                    <div class="item-title">招聘方案</div>
                    <div class="item-content"><%= prjName %></div>
                </div>
            <% } %>
            <% if(deptName){ %>
            <div class="info-item">
                <div class="item-title">报考单位</div>
                <div class="item-content"><%= deptName %></div>
            </div>
            <% } %>
            <% if(postName){ %>
            <div class="info-item">
                <div class="item-title">报考岗位</div>
                <div class="item-content"><%= postName %></div>
            </div>
            <% } %>
            </div>
            <%if(remark){%>
                <div class="info" style="margin-top: 10px;">
                    <div class="info-item2">
                        <div class="item-title">备注要求</div>
                        <div>
                            <div class="item-content"><%=remark%></div>
                        </div>
                    </div>
                </div>
            <%}%>
        </div>
    </body>
</html>
